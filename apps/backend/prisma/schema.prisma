datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  PM
  TECH
  RESIDENT
  ACCOUNTANT
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  passwordHash  String
  tenantId      Int
  role          Role
  refreshTokenHash String?
  createdAt     DateTime @default(now())
}
